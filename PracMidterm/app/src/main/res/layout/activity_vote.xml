<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/voteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:id="@+id/voteAlert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="* 체크 후 투표하세요"
        android:textSize="12sp"
        />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="223dp"
        >

        <RadioButton
            android:id="@+id/radioDog"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:text="Dog"
            tools:layout_editor_absoluteX="42dp"
            tools:layout_editor_absoluteY="336dp" />

        <RadioButton
            android:id="@+id/radioCat"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:text="Cat"
            tools:layout_editor_absoluteX="42dp"
            tools:layout_editor_absoluteY="384dp" />

        <RadioButton
            android:id="@+id/radioRabbit"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:text="Rabbit"
            tools:layout_editor_absoluteX="42dp"
            tools:layout_editor_absoluteY="281dp" />
    </RadioGroup>

    <Button
        android:id="@+id/voteBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="투표하기"
        android:backgroundTint="@color/material_dynamic_primary60"
        />

    <Button
        android:id="@+id/resultBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="결과보기" />

    <TextView
        android:id="@+id/voteView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        />
</LinearLayout>